<Window x:Class="MaximStartsev.KanaTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:MaximStartsev.KanaTrainer.MVVM"
        xmlns:views="clr-namespace:MaximStartsev.KanaTrainer.Views"
        mc:Ignorable="d"
        Title="Kana Trainer" Height="350" Width="525">
    <Grid>
        <Grid.Resources>
            <converters:KanaTypeToInt32Converter x:Key="KanaToIntConverter" />
        </Grid.Resources>
        <TabControl>
            <TabItem Header="Транслятор">
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBox Text="{Binding TextConvert, Mode=TwoWay}" Margin="2" AcceptsReturn="True" />
                        <ComboBox Margin="2" Grid.Row="1"
                      SelectedIndex="{Binding KanaType, Mode=TwoWay, Converter={StaticResource KanaToIntConverter}}">
                            <ComboBoxItem Content="Хирагана" />
                            <ComboBoxItem Content="Катакана" />
                        </ComboBox>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Мора -> слог (тест)">
                <TabItem.Content>
                    <views:TestingView DataContext="{Binding MoraToSyllableTesting}" />
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Слог -> мора (тест)">
                <TabItem.Content>
                    <views:TestingView DataContext="{Binding SyllableToMoraTesting}" />
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Мора -> слог (письмо)">
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border BorderBrush="LightGray" BorderThickness="2" Margin="20"
                                VerticalAlignment="Top" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CurrentMora, FallbackValue='あ'}" Margin="20" FontSize="50" />
                        </Border>
                        <TextBox Text="{Binding Answer}" Grid.Row="1" Margin="10" Width="100" />
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
